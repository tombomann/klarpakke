{
  "name": "Klarpakke: Daily Reset",
  "flow": [
    {
      "id": 1,
      "module": "gateway:Schedule",
      "version": 1,
      "parameters": {
        "schedule": "0 0 * * *"
      }
    },
    {
      "id": 2,
      "module": "postgresql:insertRow",
      "version": 1,
      "parameters": {
        "connection": "supabase",
        "schema": "public",
        "table": "daily_risk_meter"
      },
      "mapper": {
        "date": "{{now}}",
        "daily_loss": "0",
        "daily_trades": "0",
        "created_at": "{{now}}"
      }
    },
    {
      "id": 3,
      "module": "postgresql:insertRow",
      "version": 1,
      "parameters": {
        "connection": "supabase",
        "schema": "public",
        "table": "ai_call_log"
      },
      "mapper": {
        "action": "daily_reset",
        "timestamp": "{{now}}",
        "details": "Risk meter reset for new trading day"
      }
    }
  ]
}
